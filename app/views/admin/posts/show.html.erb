<div class="container">
  <div class="row mt-3">
    <div class="col-lg-4 px-sm-0 mb-3">
      <h4 class="d-inline-block">投稿詳細</h4>
    </div>

    <div class="col-lg-8 px-sm-0 mb-3">
      <!--削除ボタン-->
        <%= link_to "削除する", admin_post_path(@post), method: :delete, class:"ml-3 btn btn-lg btn-warning" %>
    </div>

    <!--投稿画像-->
    <div class="col-lg-4 mx-auto text-center">
      <%= image_tag @post.get_post_image(300,300) %>
    </div>

    <!--投稿情報-->
    <div class="col-sm-8 mx-auto text-left">
      <table class="table table-reflow">
        <tr>
          <th style="width:120px">タイトル</th>
          <td><%= @post.title %></td>
        </tr>
        <tr>
          <th style="width:150px">投稿日</th>
          <td><%= @post.created_at.to_s(:datetime_jp) %></td>  <!--日付の表示調整した-->
        </tr>
        <tr>
          <th style="width:150px">ユーザー名</th>
          <td><%= link_to admin_user_path(@post.user.id) do %><%= @post.user.name %><% end %></td>
        </tr>
        <tr>
          <th style="width:150px">内容</th>
          <td><%= @post.body %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row mt-4">
    <!--コメント一覧表示-->
    <div class="col-lg-4 px-sm-0 mb-3">
      <h4>コメント</h4>
    </div>

    </div>
    <div class="col-lg-12  text-left">
      <table class="table">
        <tr>
          <th>ユーザー名</th>
          <th scope="col" style="width: 50%">コメント</th>
          <th>投稿日</th>
          <th></th>
        </tr>
      <% @comments.each do |comment| %>
        <tr>
          <td><%= comment.user.name %></td>
          <td><%= comment.comment_content %></td>
          <td><%= comment.created_at.strftime('%Y/%m/%d') %></td>
          <td>
            <%= link_to "削除", admin_post_comment_path(comment.post, comment), method: :delete, class:"btn btn-danger", data: { confirm: '削除しますか？' } %>
          </td>
        </tr>
      <% end %>
      </table>
    </div>

  </div>
</div>