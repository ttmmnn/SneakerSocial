<!DOCTYPE html>
<html>
  <head>
    <title>SneakerSocial</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="/css/bootstrap.min.css" rel="stylesheet">

  </head>

  <body>
    <%= render 'layouts/header' %>
    <div class="alert  alert-dismissible fade show mb-0" role="alert" <% unless flash[:notice].present? || flash[:alert].present? %>style="display: none;"<% end %>>
      <span class="text-center"><h5><strong><%= flash[:notice] %></strong></h5></span>
      <span class="text-center"><h5><strong><%= flash[:alert] %></strong></h5></span>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>

    <%= yield %>
    <%= render 'layouts/footer' %>
  </body>

</html>
