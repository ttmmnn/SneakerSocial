<header class="sticky-top">
  <nav class="navbar navbar-expand-lg bg-info bg-gradient py-0">
    <div class="container-fluid">
      <div class="d-flex align-items-center">
        <h2><%= link_to image_tag("logo.png"), root_path %></h2>
        <h4 class="text-center mt-3" style="font-family: 'Impact', cursive;">Sneaker Social</h4>
      </div>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarColor03">
        <ul class="navbar-nav ml-auto d-flex flex-row">
          <!--会員がログインしているとき-->
          <% if user_signed_in? %>
            <div class="mr-5 mt-2 text-white">
              <h6><i class="fas fa-user"></i>：<strong><%= current_user.name %></strong>さん</h6>
            </div>
            <li class="nav-item">
              <%= link_to user_path(current_user), class: 'btn btn-primary mr-2' do %>
                <i class="fas fa-user"></i> マイページ
              <% end %>
            </li>
            <li>
              <%= link_to posts_path, class: 'btn btn-primary mr-2' do %>
              <i class="fas fa-shoe-prints"></i> 投稿一覧
              <% end %>
            </li>
            <li>
              <%= link_to search_users_path, class: 'btn btn-primary mr-2' do %>
              <i class="fas fa-users"></i> ユーザー検索
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete, class: 'btn btn-primary mr-2' do %>
              <i class="fas fa-sign-out-alt"></i> ログアウト
              <% end %>
            </li>

          <!--管理者がログインしているとき-->
          <% elsif admin_signed_in? %>
            <div class=" mt-2 mr-2"><strong> !!管理者!! </strong></div>
            <li>
              <%= link_to admin_posts_path, class: 'nav-link text-dark' do %>
              <i class="fas fa-shoe-prints"></i> 投稿一覧
              <% end %>
            </li>
            <li>
              <%= link_to admin_users_path, class: 'nav-link text-dark' do %>
              <i class="fas fa-users"></i> ユーザー一覧
              <% end %>
            </li>
              <%= link_to destroy_admin_session_path, method: :delete, class: 'nav-link text-dark' do %>
              <i class="fas fa-sign-out-alt"></i> ログアウト
              <% end %>
            </li>

          <!--ログインしていないとき-->
          <% else %>
            <li>
              <%= link_to about_path, class: 'btn btn-primary mr-2' do %>
              <i class="fas fa-link"></i> About
              <% end %>
            </li>
            <li>
              <%= link_to new_user_registration_path, class: 'btn btn-primary mr-2' do %>
                <i class="fas fa-user-plus"></i> 会員登録
              <% end %>
            </li>
            <li>
              <%= link_to new_user_session_path , class: 'btn btn-primary mr-2' do %>
                <i class="fas fa-sign-in-alt"></i> ログイン
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>