<div class="container">
  <div class="row">
    <div class="col-sm-4 px-sm-0 mb-3">
      <h3 class="d-inline-block">マイページ編集</h3>
    </div>
  </div>
  <!--エラーメッセージ-->
  <div class="p-4">
    <% if @user.errors.any? %>
      <ul class="alert alert-danger" role="alert">
        <h6 class-"aleart-heading">
          <%= @user.errors.count %>件のエラーが発生しました
        </h6>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <!--編集フォーム-->
  <%= form_with model: @user do |f| %>
    <div class="row">
      <div class="col-sm-4 mt-3">
        <%= image_tag @user.get_profile_image(200,200) %>
        <%= f.file_field :image, accept: "image/*", class:"mt-3 w-100" %>
      </div>
      <div class="col-sm-6">
        <div class="form-group mt-2">
          <%= f.label "ユーザー名" %>
          <%= f.text_field :name, class:"form-control", placeholder:"ユーザー名をここに" %>
        </div>
        <div class="form-group mt-2">
          <%= f.label "メールアドレス" %>
          <%= f.text_field :email, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "紹介文" %>
          <%= f.text_area :introduction, class:"form-control",rows:"5", placeholder:"内容をここに" %>
      　</div>
      </div>
    </div>
　　<div class="form-group col-sm-2">
      <%= f.submit '登録する', class:"btn btn-lg btn-block btn-primary"%>
    </div>
  <% end %>
</div>