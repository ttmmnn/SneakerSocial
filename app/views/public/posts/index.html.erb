<div class="container">
  <div class="row">
    <div class="col-sm-12 px-sm-0">
      <h2 class="d-inline-block">投稿一覧</h2>
      <h4 class="d-inline-block ml-3">（全 <%= @posts.count %>件）</h4>
    </div>
  </div>

  <div class="row">
    <% @posts.each do |post| %>
    <div class=" col-xs-10 col-sm-6 col-md-6 col-lg-3">
      <div class="card w-100 bg-transparent text-center" style="width: 18rem;">
        <%= link_to post_path(post) do %>
          <p class="img-wrap"><%= image_tag post.get_post_image(250,250) %></p>
        <% end %>
        <div class="card-body py-0">
          <h6 class="card-title"><%= post.title %></h6>
          <h6 class="card-title d-inline-block">いいね○件</h6>
          <h6 class="card-title d-inline-block pl-4">閲覧数○件</h6>
        </div>
      </div>
    </div>
    <% end %>
  </div>

  <div class="row">
    <div class="mb-2 d-block mx-auto">
    <h5><%= paginate @post_page %></h5>
    </div>
  </div>
</div>