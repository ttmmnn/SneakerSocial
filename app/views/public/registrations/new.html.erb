<div class="container">
  <div class="row mt-3 mb-3">
    <div class="col offset-1">
      <h2>会員登録</h2>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="row mb-3">
    <%= f.label "メールアドレス", class:"col-md-2 offset-md-1" %>
    <%= f.email_field :email, autofocus: true, class:"col-md-2 form-control" %>
  </div>

  <div class="row mb-3">
    <%= f.label "パスワード", class:"col-md-2 offset-md-1" %>
    <%= f.password_field :password, autocomplete: "new-password", class:"col-md-2 form-control" %>
    <% if @minimum_password_length %>
    <div class="d-flex align-items-center">(<%= @minimum_password_length %> 文字以上)</div>
    <% end %><br />
  </div>

  <div class="row mb-3">
    <%= f.label "パスワード（確認）", class:"col-md-2 offset-md-1" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"col-md-2 form-control" %>
    <% if @minimum_password_length %>
    <div class="d-flex align-items-center">(<%= @minimum_password_length %> 文字以上)</div>
    <% end %><br />
  </div>

  <div class="row mb-3">
    <%= f.submit "新規登録", class:"col-md-2 offset-md-3 btn btn-primary" %>
    <%= link_to "ゲストログイン", users_guest_sign_in_path, method: :post, class:"col-md-2 ml-3 btn btn-secondary" %>
  </div>
  <% end %>

  <div class="row mb-5">
    <div class="col offset-md-3">
      <%= render "public/shared/links" %>
    </div>
  </div>

</div>
